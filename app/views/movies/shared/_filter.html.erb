<%= form_with url: movies_path, method: :get, data: { controller: 'select2' }, class: "form-inline w-100 mb-3" do |form| %>
  <div class="input-group">
    <%= form.text_field :title, class: "form-control", type: "search", placeholder: "Search", aria: { label: 'Name' }, value: params[:title] %>
    <%= form.submit "Search", class: "btn btn-primary", type: "submit" %>
  </div>
  <div class="row row-cols-2">
    <div class="my-3">
      <h4>Genre</h4>
      <%= form.select :genre_ids, Genre.all.map { |genre| [genre.name, genre.id] }, {}, data: { placeholder: 'Please select genres' }, multiple: true, class: 'select2 w-100' %>
    </div>
    <div class="my-3">
      <h4>Showing status</h4>
      <%= form.select :status, [["Showing", "SHOWING"], ["Screened", "SCREENED"], ["Coming Soon", "SOON"]], { selected: params[:status] }, { class: "form-select w-25" } %>
    </div>
  </div>
<% end %>