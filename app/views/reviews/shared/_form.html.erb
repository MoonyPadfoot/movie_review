<%= form_with model: review, url: path do |form| %>
  <div class="mb-3" style="width: 100px">
    <%= form.number_field :rating, class: "form-control", placeholder: "rating", value: 0 %>
  </div>
  <% @review.errors.full_messages_for(:rating).each do |message| %>
    <div class="text-danger"><%= message %></div>
  <% end %>

  <div class="my-2">
    <%= form.text_area :content, class: "form-control", style: "height: 150px;", placeholder: "Add a comment..." %>
  </div>
  <% @review.errors.full_messages_for(:content).each do |message| %>
    <div class="text-danger"><%= message %></div>
  <% end %>

  <div class="my-3 d-flex justify-content-end">
    <%= form.submit 'Add comment', class: 'btn btn-md btn-success' %>
  </div>
<% end %>